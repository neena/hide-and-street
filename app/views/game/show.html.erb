<div class="float-right"><a data-toggle="modal" href="#myModal" class="btn btn-primary">About</a>

<!-- Modal -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
