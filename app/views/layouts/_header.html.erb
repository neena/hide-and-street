<!-- Button trigger modal -->
<div class="float-right">
	<%= link_to "About","#about-modal", :class => "btn btn-primary", "data-toggle" => "modal"%>
	      	
	<% if !user_signed_in? %>
		<%= link_to "Register",new_user_registration_path, :class => "btn btn-success" %>
		<%= link_to "Login",new_user_session_path, :class => "btn btn-warning" %>
		<%= link_to "New Challenge",new_challenge_path, :class => "btn btn-info" %>
	<% else %>
		<div class="btn-group">
		  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		  	<%= current_user.username %>
		    <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu pull-right">
		  	<li>
		  		<a>Score: <%=current_user.score%></a>
		  	</li>
		  	<li>
		    	<%= link_to "Challenges", challenges_path %>
		    </li>
		  	<li class="divider"></li>
		    <li>
		    	<%= link_to "Edit my profile",edit_user_registration_path %>
		    </li>
		    <li>
		    	<%= link_to "Logout", destroy_user_session_path, :method => :delete %>
		    </li>
		  </ul>
		</div>
	<% end %>
</div>

<%= link_to root_path do %>
	<%= image_tag("logo.png", :class => "logo") %>
<% end %>
<%= render "layouts/about" %>